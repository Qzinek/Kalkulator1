    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <input type="text" placeholder="1" id="liczba1">
    <input type="text" placeholder="2" id="liczba2">
    <br>
    <button onclick="pomnoz()">pomnóż</button>
    <button onclick="podziel()">podziel</button>
    <button onclick="dodaj()">dodaj</button>
    <button onclick="odejmij()">odejmij</button>
    <h3>Wynik: </h3>
    <div id="wynik"></div>
    <script>
        function dodaj(){
    var liczba1=parseInt(document.getElementById("liczba1").value);
    var liczba2=parseInt(document.getElementById("liczba2").value);
    var wynik_tym=liczba1+liczba2;
    document.getElementById("wynik").innerHTML=wynik_tym;
}
function odejmij(){
    var liczba1=parseInt(document.getElementById("liczba1").value);
    var liczba2=parseInt(document.getElementById("liczba2").value);
    var wynik_tym=liczba1-liczba2;
    document.getElementById("wynik").innerHTML=wynik_tym;
}
function pomnoz(){
    var liczba1=parseInt(document.getElementById("liczba1").value);
    var liczba2=parseInt(document.getElementById("liczba2").value);
    var wynik_tym=liczba1*liczba2;
    document.getElementById("wynik").innerHTML=wynik_tym;
}
function podziel(){
    var liczba1=parseInt(document.getElementById("liczba1").value);
    var liczba2=parseInt(document.getElementById("liczba2").value);
    var wynik_tym=liczba1/liczba2;
    document.getElementById("wynik").innerHTML=wynik_tym;
}
    </script>
</body>
</html>
